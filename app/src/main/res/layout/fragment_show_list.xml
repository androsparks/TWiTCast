<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.libraries.cast.companionlibrary.widgets.MiniController
        android:id="@+id/miniController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:auto_setup="true"
        android:visibility="gone"/>

    <com.tragicfruit.twitcast.show.AutofitRecyclerView
        android:id="@+id/fragment_show_list_recycler_view"
        android:layout_above="@id/miniController"
        android:columnWidth="180dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</RelativeLayout>